<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botão de Histórico -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistory"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Histórico de Cálculos"
        app:icon="@drawable/ic_history_white"
        app:iconTint="?attr/colorOnPrimaryContainer"
        app:layout_constraintTop_toTopOf="@id/txtOperacao"
        app:layout_constraintBottom_toBottomOf="@id/txtResultado"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Display da operação -->
    <TextView
        android:id="@+id/txtOperacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Display da calculadora -->
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtOperacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grade de botões -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintVertical_bias="0.0">

        <!-- Linha 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearEntry"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="CE" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackspace"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="⌫" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDividir"
            style="@style/Widget.Material3.Button"
            android:layout_width="150dp"
            android:text="÷" />

        <!-- Linha 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiplicar"
            style="@style/Widget.Material3.Button"
            android:layout_width="150dp"
            android:text="×" />

        <!-- Linha 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtrair"
            style="@style/Widget.Material3.Button"
            android:layout_width="150dp"
            android:text="-" />

        <!-- Linha 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSomar"
            style="@style/Widget.Material3.Button"
            android:layout_width="150dp"
            android:text="+" />

        <!-- Linha 5 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMaisMenos"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="±" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPonto"
            style="@style/Widget.Material3.Button"
            android:layout_width="170dp"
            android:text="." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIgual"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:text="=" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
